---
import MainLayout from "../layouts/MainLayout.astro";
import Section from "../components/Section.astro";
import Grid from "../components/Grid.astro";
import Wrapper from "../components/Wrapper.astro";
import PriceCard from "../components/PriceCard.astro";
import HeroShot from "../components/HeroShot.astro";
---

<MainLayout
    title="Preise von Zumba®-Stream"
    description="Wieviel kostet dich Zumba® Tanz? Bei Zumba®-Stream zahlst du für Zumba® Online einen fairen Preis. Dafür bekommst du Spaß, Stimmung, Party, Bock auf Bewegung und dein Wunschgewicht."
    opengraph={{
        title: "Preise Zumba®-Stream",
        url: "https://www.zumba-stream.com/preise/",
        image: "https://www.zumba-stream.com/images/index-opengraph.jpg",
        type: "website",
        description: "Wieviel Zumba®-Stream kostet, erfährst du hier.",
        locale: "de",
    }}
>
    <HeroShot
        heading="Erst 14 Tage testen. Dann zahlen."
        displayClass="hidden"
    />
    <Section>
        <Wrapper wrapperClass="wrapper">
            <div class="toggle__container col--span-3">
                <p>monatlich</p>
                <input type="checkbox" id="price-toggle" aria-label="Umschalten zwischen jährlichen und monatlichen Preisen." />
                <label class="label" for="price-toggle"
                    ><div class="selected"></div></label
                >
                <p>jährlich</p>
            </div>
            <Grid gridColumnClass="grid-3fr">
                <div class="row--2">
                    <PriceCard
                        heading="Starter"
                        subheading="Frei für immer"
                        alwaysFree
                        listItems={[
                            "keine Laufzeit",
                            "10 Stunden Zumba® Online",
                            "Zumba Grundschritte",
                            "Anfänger Workout",
                            "Keine Laufzeit",
                        ]}
                        listItemsExtra={[]}
                        borderClass="price-card__border--left"
                        btn={{
                            href: "https://zim.uscreen.io/orders/customer_info?o=84206",
                            text: "Jetzt loslegen",
                        }}
                    />
                </div>
                <div class="row--2">
                    <div class="price__box">
                        <div class="price__card">
                            <PriceCard
                                heading="Premium Abo"
                                subheading="monatlich oder jährlich"
                                monthlyPrices={{
                                    oldPrice: "24,99 €",
                                    price: "ab 9,99 € / Monat",
                                }}
                                yearlyPrices={{
                                    oldPrice: "179,99 €",
                                    price: "119,99 € / Jahr",
                                }}
                                listItems={[
                                    "regelmäßig neue Workouts",
                                    "13 lizensierte Trainer",
                                    "200+ Stunden Zumba® Online",
                                    "Zumba® Fitness 140+ Stunden",
                                    "Zumba® Toning 25+ Stunden",
                                    "STRONG™ Nation 24+ Stunden",
                                    "STRONG 30™ 9 Stunden",
                                    "500+ Stunden Repertoire",
                                    "Specials 6+ Stunden",
                                    "Übertragung auf TV möglich",
                                    "Urlaubsfeeling pur",
                                ]}
                                listItemsExtra={[]}
                                borderClass="price-card__border--center"
                                btn={{
                                    href: "https://zim.uscreen.io/orders/customer_info?o=78651", // https://zim.uscreen.io/orders/customer_info?o=77420
                                    text: "Jetzt loslegen",
                                }}
                            />
                        </div>
                    </div>
                </div>
                <div class="row--2">
                    <PriceCard
                        heading="VIP-Abo"
                        subheading="Individuell"
                        monthlyPrices={{
                            oldPrice: "119,99 €",
                            price: "99,99 € / Monat",
                        }}
                        listItems={[
                            "regelmäßig neue Workouts",
                            "13 lizensierte Trainer",
                            "200+ Stunden Zumba® Online",
                            "Zumba® Fitness 140+ Stunden",
                            "Zumba® Toning 25+ Stunden",
                            "STRONG™ Nation 24+ Stunden",
                            "STRONG 30™ 9 Stunden",
                            "500+ Stunden Repertoire",
                            "Specials 6+ Stunden",
                            "Übertragung auf TV möglich",
                            "Urlaubsfeeling pur",
                        ]}
                        listItemsExtra={[
                            "4 online Privatstunden im Monat mit Kristina",
                            "Mindestlaufzeit 3 Monate",
                            "individuelle Beratung, um Deine Ziele zu erreichen",
                            "persönliche, auf Deine Vorlieben abgestimmte Stunden",
                        ]}
                        borderClass="price-card__border--right"
                        btn={{
                            href: "https://zim.uscreen.io/orders/customer_info?o=138160",
                            text: "Jetzt loslegen",
                        }}
                    />
                </div>
            </Grid>
        </Wrapper>
    </Section>
</MainLayout>

<style is:inline>
    body.show-yearly-prices .monthly {
        display: none;
    }

    body:not(.show-yearly-prices) .yearly {
        display: none;
    }

    .price__box,
    .price__card {
        height: 100%;
    }

    .toggle__container {
        display: flex;
        justify-content: center;
        align-items: center;
        margin: 0 auto;
    }

    .toggle__container input {
        display: none;
    }

    .toggle__container label {
        border-radius: var(--border-radius);
        height: 2em;
        width: 4em;
        border: 1px solid var(--first-color);
        cursor: pointer;
        position: relative;
        margin: 0 0.4em;
    }

    .toggle__container .label .selected {
        position: absolute;
        left: 3px;
        top: 50%;
        transform: translateY(-50%);
        height: 90%;
        width: 45%;
        background-color: var(--first-color);
        border-radius: 50%;
        transition: left 0.3s ease-in;
    }

    .label.active .selected {
        left: 2em;
        background-color: var(--fourth-color);
    }
</style>
