---
import MainLayout from "../layouts/MainLayout.astro";
import HeroShot from "../components/HeroShot.astro";
import Arrow from "../components/Arrow.astro";
import Facts from "../components/Facts.astro";
import Card from "../components/Card.astro";
import Section from "../components/Section.astro";
import Grid from "../components/Grid.astro";
import Button from "../components/Button.astro";
import Wrapper from "../components/Wrapper.astro";
import Figure from "../components/Figure.astro";
import Video from "../components/Video.astro";
import VideoCard from "../components/VideoCard.astro";
---

<MainLayout
title="Homepage Salsa Dance Studio Mainz"
description="">
	<HeroShot
		heading="Stell' Dir vor, Du hast Spaß und verbrennst spielend Kalorien dabei"
		subheading="Genial, oder? Mach mit bei Zumba® -Stream. Zumba® wann, wo und so oft du willst. Erreiche mit uns dein Wunschgewicht!"
		btn={{
			href:'https://zim.uscreen.io/join',
			text:'7 Tage kostenlos testen'
		}}
		backgroundImgClass="teaser__background-img3"
		img={{
			src:'/images/dancer-graphic.webp',
			alt:'Graphic Dancer',
			width:'360'
		}}
	/>

	<!-- FACTS -->
	<Section
	paddingClass="padding--top-negative"
	>
		<Wrapper
		wrapperClass="wrapper">
		<Grid 
		gridColumnClass="grid-4fr--arrow"
		gridMarginClass="grid__margin-bottom--120">
		<Arrow 
			img={{
				src:'/images/arrow-color-gradient.svg',
				alt:'Arrow pointing down'
			}}
			/>
