---
const { nr, text, heading = "", alignItemsClass = "" } = Astro.props;
---


    <div class="facts">
        <p class={`
            fact__nr
            ${alignItemsClass}
            `}>{ nr }</p>
        <div class={`
        ${alignItemsClass}
        `}>
        <h4 class="fact__heading">{ heading }</h4>
        <p set:html={ text } class="fact__text" />
        </div>   
    </div>


<style>
  
    .fact__nr {
        font-family: var(--ff-heading);
        font-size: var(--fs-500);
        margin: 0;
        color: var(--first-color);
    }

    .fact__text {
        font-size: var(--fs-300);
        margin: 0;
    }

    @media only screen and (min-width: 40em) {
        .facts {
            display: flex;
            gap: 1em;
        }

        .fact__nr {
        font-size: var(--fs-600);
        margin-top: 0;
        }

        .fact__heading {
            padding-top: 0.3em;
            margin-top: 0;
        }

        .fact__text {
        font-size: var(--fs-300);
        }

        .align-items--start {
            align-self: flex-start;
        }

        .align-items--center {
            align-self: center;
        }
    }
</style>