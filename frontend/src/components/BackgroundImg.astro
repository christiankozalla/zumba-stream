---
const { backgroundImgClass } = Astro.props;
---

<div class={`
background-img
${backgroundImgClass}
`}
>
<slot/>
</div>

<style>
    .background-img {
        background-repeat: no-repeat;
        padding: 2em 0 0 0;
    }

    .color-patch {
        background-image: url('/images/color-patch.png');
        background-position: top center;
        background-size: contain;
    }

    .color-patch--purple {
        background-image: url('/images/color-patch-purple.png');
        background-position: bottom right;
        background-size: contain;
    }

    .color-patch--purple-opacity {
        background-image: url('/images/color-patch-purple-opacity.png');
        background-position: center right;
        background-size: 60%;
    }

    .color-patch--purple-opacity-top {
        background-image: url('/images/color-patch-purple-opacity.png');
        background-position: top right;
        background-size: 40%;
    }

    .color-patch--purple-scalex {
        background-image: url('/images/color-patch-purple.png');
        background-position: center right;
        background-size: 70%;
    }

    .color-patch--blue-yellow {
        background-image: url('/images/color-patch-blue-yellow.png');
        background-position: top center;
        background-size: cover;
    }


    .color-patch--green-yellow-orange {
        background-image: url('/images/color-patch-green-yellow-orange.png');
        background-position: center;
        background-size: cover;
    }

    .color-patch--green-yellow-orange-opacity {
        background-image: url('/images/color-patch-green-yellow-orange-opacity.png');
        background-position: top center;
        background-size: contain;
    }

    .color-patch--orange {
        background-image: url('/images/color-patch-orange.png');
        background-position: bottom center;
        background-size: 60%;
    }

    .color-patch--orange-left {
        background-image: url('/images/color-patch-orange.png');
        background-position: top center;
        background-size: contain;
    }

    @media only screen and (min-width: 40em) {
        .color-patch {
        background-position: top left;
        background-size: 80%;
    }

    .color-patch--orange {
        background-image: url('/images/color-patch-orange.png');
        background-position: bottom right;
        background-size: 70%;
    }

    .color-patch--orange-left {
        background-image: url('/images/color-patch-orange.png');
        background-position: top left;
        background-size: 70%;
    }

    .color-patch--purple-scalex {
        background-size: 40%;
        background-image: url('/images/color-patch-purple-scalex.png');
        background-position: bottom left;
    }

    .color-patch--purple-opacity {
        background-size: 60%;
        background-image: url('/images/color-patch-purple-scalex-opacity.png');
        background-position: bottom left;
    }

    .color-patch--blue-yellow {
        background-image: url('/images/color-patch-blue-yellow.png');
        background-position: bottom center;
        background-size: contain;
    }
    }

    @media only screen and (min-width: 60em) {
 
    .color-patch--purple-scalex {
        background-size: 28%;
        background-image: url('/images/color-patch-purple.png');
        background-position: bottom right;
    }

    
    .color-patch--purple-opacity {
        background-size: 30%;
        background-image: url('/images/color-patch-purple-opacity.png');
        background-position: center right;
    }

    .color-patch--purple-opacity-top {
        background-size: 20%;
    }

    .color-patch--blue-yellow {
        background-size: contain;
    }

    .color-patch--green-yellow-orange {
        background-position: right;
        background-size: contain;
    }

    .color-patch--green-yellow-orange-opacity {
        background-position: left center;
    }

    .color-patch--orange {
        background-position: right;
        background-size: contain;
    }

    .color-patch--orange-left {
        background-position: left;
        background-size: contain;
    }

    .color-patch {
        background-size: 60%;
    }
}

@media only screen and (min-width: 80em) {
 
 .color-patch--purple-scalex {
     background-size: 20%;
 }

 .color-patch--purple-opacity {
     background-size: 20%;
 }

 .color-patch--purple-opacity-top {
        background-size: 20%;
    }

 .color-patch {
        background-size: contain;
    }
}
</style>