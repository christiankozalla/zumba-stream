    <label for="navbar__checkbox" class="navbar__toggle">
        <span></span>
    </label>

    <div class="logo__container">
        <a href="/"
            ><img class="logo" src="/images/logo.svg" alt="Logo von Zumba-Stream" width="120" /></a
        >
    </div>
    <nav class="navbar">
        <ul class="navbar__ul">
            <li class="navbar__li">
                <a class="navbar__a" href="/preise">Preise</a>
            </li>
            <li class="navbar__li">
                <a class="navbar__a" href="/blog">Blog</a>
            </li>
            <li class="navbar__li">
                <a class="navbar__a" href="/ueber-zumba-stream">Ãœber</a>
            </li>
            <li class="navbar__li">
                <a class="navbar__a" href="https://zim.uscreen.io/sign_in"
                    >Login</a>
