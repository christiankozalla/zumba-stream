---
const { img, text, subtext = "", spanClass = "", sizeClass = "" } = Astro.props;
---

<div class={`
card__container
${spanClass}
${sizeClass}
`}>
    { img &&
    (<img class="card__img" width="50" src={ img.src } alt={ img.alt }/>)
    }
    <p class="card__text">{ text }</p>
    <p class="card__subtext">{ subtext }</p>
</div>

<style>

.card__container {
    border-radius: var(--border-radius);
    box-shadow: 12px 16px 20px #F6F7F8;
    padding: 1.8em;
    background-color: #fff;
    margin: auto;
    
}

.card__container--smaller {
    max-width: 20em;
}

.card__img {
    margin-bottom: 0.4em;
}

.card__text {
    font-size: var(--fs-xs);
}

.card__subtext {
    font-weight: bold;
    font-size: var(--fs-xs);
}

@media only screen and (min-width: 40em) {
    .card__container--span-2 {
    grid-column: 1 / 3
}
}

</style>