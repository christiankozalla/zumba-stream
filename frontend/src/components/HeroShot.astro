---
const { img = "", heading, subheading = "", btn = "", backgroundColorClass = "", backgroundImgClass="", imgClass="", displayClass = "", date = "", readingTime = "", author = "", facebookShareLink = "", linkedinShareLink = "" } = Astro.props;
---

<div class={`
teaser__container
${backgroundImgClass}
${imgClass}
${backgroundColorClass}
`}>
    <div class="teaser__img-container">
        {img && 
        (
        <img class={`
            teaser__img
            ${displayClass}
            `} src={ img.src } alt={ img.alt } width={ img.width }/>
        )
        }
    </div>
    <div class="teaser__text-container">
        <div class="teaser__details">
            <p>{ author }</p>
        <p class="p--no-margin">{ date }</p>
        <h6 class="teaser__time  p--no-margin">{ readingTime }</h6>
        <a href={ facebookShareLink }><i class="icofont-facebook  icofont-lg"></i></a>
        <a href={ linkedinShareLink }><i class="icofont-linkedin  icofont-lg"></i></a>
        </div>
        <h1 class="teaser__heading">{ heading }</h1>
        <p set:html={ subheading } class="teaser__subheading"/>
        {btn &&
        (
        <div class="teaser__btn-container"><a class="teaser__btn" href={ btn.href }>{ btn.text }</a></div>
        )
        }
    </div>
</div>

<style>
    .teaser__container {
    display: grid;
    grid-template-areas: "teaser__container";
    padding: 1em 0;
    margin-bottom: -7em;
    }

   

    .img--display-none {
        display: none;
    }

    .teaser__graphic--dancer {
        background-image: url(/images/dancer-graphic.webp);
        z-index: 2;
        background-position: right;
        background-size: 70%;
    }

    .teaser__background-img {
        background-image: url(/images/color-patch-pink01-flipped.svg);
        background-position: top;
        background-size: 100%;
        background-repeat: no-repeat;
    }

    .teaser__background-img1 {
        background-image: url(/images/color-patch-pink.svg);
        background-position: right top;
        background-size: 50%;
        background-repeat: no-repeat;
    }

    .teaser__background-img2 {
        background-image: url(/images/color-patch-orange.svg);
        background-position: right top;
        background-size: 50%;
        background-repeat: no-repeat;
    }

    .teaser__background-img3 {
        background-image: url(/images/color-patch.svg);
        background-position: right top;
        background-size: 90%;
        background-repeat: no-repeat;
        padding: 2em;
    }


    .teaser__container > * {
        grid-area: teaser__container;
    }

    .teaser__text-container {
        padding: 2rem;
    }

    .first-color {
        background-color: var(--first-color);
    }

    .second-color {
        background-color: var(--second-color);
    }

    .linear-gradient {
        background-image: linear-gradient(190deg, var(--first-color), #9d6edc, #6a92c9, #b2f4d6);
    }

    .teaser__details {
        display: flex;
        justify-content: flex-start;
        gap: 1em;
        align-items: center;
        margin-bottom: -2em;
    }

    .teaser__time {
        color: var(--first-color);
    }

    .teaser__heading {
        font-size: var(--fs-600);
        width: 100%;
        line-height: 1.2;
        margin-bottom: 0.3em;
        padding-top: 1rem;
    }

    .teaser__subheading {
        margin-bottom: 3em;
        font-size: var(--fs-300);
        line-height: 1.5;
    }
    .teaser__btn-container {
        padding-bottom: 2rem;
    }

.teaser__btn {
    background-color: var(--first-color);
    border: 1px solid var(--first-color);
    color: #fff;
    padding: 1rem;
    border-radius: var(--border-radius);
    text-decoration: none;
    font-weight: bold;
    font-size: var(--fs-xs);
}

.teaser__btn:hover {
        background-color: #fff;
        color: var(--first-color);
}

@media only screen and (min-width: 40em) {
    .teaser__background-img3 {
        background-size: 60%;
    }

    .img--display-none {
        display: flex;
    }

    .teaser__background-img {
        background-size: 70%;
        background-position: right;
    }

    .teaser__container {
        padding: 5em 0;
    }
}

@media only screen and (min-width: 60em) {
    .teaser__text-container {
        max-width: 50%;
        padding: 0 0 0 10rem;
    }
    
    .teaser__heading {
        font-size: var(--fs-xl);
    }

    .teaser__img {
        margin-right: 18rem;
        margin-top: -5em;
    }

    .teaser__img-container {
        align-items: center;
        display: flex;
        justify-content: flex-end;
    }
}
</style>