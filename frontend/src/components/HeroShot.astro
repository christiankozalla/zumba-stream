---
const { img = "", heading, subheading = "", btn = "", backgroundColorClass = "", backgroundImgClass="", imgClass="", teaserImgClass = "", displayClass = "", date = "", readingTime = "", author = "", facebookShareLink = "", linkedinShareLink = "" } = Astro.props;
---

<div class={`
teaser__container
${backgroundImgClass}
${imgClass}
${backgroundColorClass}
`}>
    
    <div class="teaser__text-container">
        <div class="teaser__details">
            <p><strong>{ author }</strong></p>
        <p class="p--no-margin">{ date }</p>
        <h6 class="teaser__time  p--no-margin">{ readingTime }</h6>
        <div class={`
        teaser__share
        ${displayClass}
        `}>
        <a href={ facebookShareLink }><i class="icofont-facebook  icofont-lg"></i></a>
        <a href={ linkedinShareLink }><i class="icofont-linkedin  icofont-lg"></i></a>
        </div>
        </div>
       
            <div class="teaser__heading-img-container">
                <div>
                <h1 class="teaser__heading">{ heading }</h1>
                <p set:html={ subheading } class="teaser__subheading"/>
                {btn &&
                (
                <div class="teaser__btn-container"><a class="teaser__btn" href={ btn.href }>{ btn.text }</a></div>
                )
                }
                </div>
                <div class="teaser__img-container">
                {img && 
                (
                <img class={`
                    ${teaserImgClass}
                    `} src={ img.src } alt={ img.alt } width={ img.width }/>
                )
                }
                </div>
            </div>
    </div>
</div>

<style>
    .teaser__container {
    display: grid;
    grid-template-areas: "teaser__container";
    margin: 0 auto;
    max-width: 1400px;
    }

    .teaser__container > * {
        grid-area: teaser__container;
    }

    .teaser__heading-img-container {
        display: grid;
        grid-template-columns: 1fr;
    }

    .teaser__img-container {
        grid-row-start: 1;
        max-width: 80%;
        margin: 0 auto;
    }

    .teaser__text-container {
        padding: 0 2em;
    }

    .teaser__heading {
        font-size: var(--fs-700);
        max-width: 100%;
        line-height: 1;
        margin-bottom: 0.3em;
        padding-top: 1rem;
    }

    .teaser__subheading {
        margin-bottom: 3em;
        font-size: var(--fs-300);
        line-height: 1.5;
    }

    .teaser__img-dancer {
        display: none;
    }

    .teaser__btn-container {
        padding-bottom: 2rem;
    }

    .teaser__btn {
        background-color: var(--first-color);
        border: 1px solid var(--first-color);
        color: #fff;
        padding: 1rem;
        border-radius: var(--border-radius);
        text-decoration: none;
        font-weight: bold;
        font-size: var(--fs-xs);
    }

    .teaser__btn:hover {
            background-color: #fff;
            color: var(--first-color);
    }

    /* BACKGROUND IMAGES */

    .teaser__background-img2 {
        background-image: url(/images/color-patch-green-yellow-orange.png);
        background-position: top left;
        background-size: cover;
        background-repeat: no-repeat;
    }

    .teaser__background--color-patch {
        background-image: url(/images/color-patch-flipped.png);
        background-position: right top;
        background-size: contain;
        background-repeat: no-repeat;
    }

    /* COLORS */

    .first-color {
        background-color: var(--first-color);
    }

    .second-color {
        background-color: var(--second-color);
    }

    .linear-gradient {
        background-image: linear-gradient(190deg, var(--first-color), #9d6edc, #6a92c9, #b2f4d6);
    }

    /* DETAILS FOR BLOG POSTS */

    .teaser__details {
        display: flex;
        justify-content: flex-start;
        gap: 1em;
        align-items: center;
        margin-top: 4em;
        margin-bottom: -0.6em;
    }

    .teaser__share {
        display: flex;
        gap: 1em;
    }

    .teaser__time {
        color: var(--first-color);
    }

    /* OTHER CLASSES */

    .hidden {
        display: none;
    }

 

@media only screen and (min-width: 40em) {
    .teaser__text-container {
        padding: 0 2rem;
        max-width: 100%;
    }

    .teaser__heading-img-container {
        display: grid;
        grid-template-columns: auto auto;
        gap: 2em;
    }

    .teaser__img-container {
        grid-column-start: 2;
    }


    .teaser__img-dancer {
        display: unset;
        margin-top: -10%;
    }

    .teaser__background-img2 {
        background-position: top right;
        background-size: contain;
    }
    .teaser__background-img {
        background-size: 70%;
        background-position: right;
    }

    .teaser__container {
        padding: 5em 0 0 0;
    }

    .teaser__details {
        margin-top: 0;
    }
}

@media only screen and (min-width: 48em) {

       .teaser__text-container {
        padding: 0 2rem 1rem 2rem;
    }

    .teaser__img-dancer {
        max-width: 80%;
    }
}


@media only screen and (min-width: 60em) {
    .teaser__heading {
        font-size: var(--fs-xl);
    }

    .teaser__img-dancer {
        max-width: 80%;
    }

    .teaser__img-container {
        align-items: center;
        display: flex;
        justify-content: flex-end;
    }

    .teaser__subheading {
        margin-bottom: 2em;
        font-size: var(--fs-400);
        line-height: 1.4;
    }

    .teaser__heading-img-container {
        grid-template-columns: 1fr auto;
    }
}

@media only screen and (min-width: 80em) {
    .teaser__text-container {
        max-width: 80%;
        margin: 0 auto;
    }

    .teaser__img-dancer {
        max-width: 80%;
    }

    .teaser__img-group {
        right: 10%;
    }

    .teaser__background-img3 {
        background-size: contain;
    }
}
</style>